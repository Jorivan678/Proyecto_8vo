@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> _SignInManager

<ul class="navbar-nav">
@if (_SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: rgba(224,217,217,0.9);">¡Hola @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link" style="color: rgba(224,217,217,0.9);">Cerrar Sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="color: rgba(224,217,217,0.9);">Registrarse</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="color: rgba(224,217,217,0.9);">Iniciar Sesión</a>
    </li>
}
</ul>
